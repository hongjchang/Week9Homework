{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "title": "Total Rainfall in Australia Between December 2008 and April 2009",
    "projection": {
        "type":"equirectangular"
    },
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/hongjchang/Week9Homework/main/js/ne_50m.topojson",
                "format": {"type": "topojson", "feature": "ne_50m_ocean"}
            },
            "mark": {"type": "geoshape", "stroke": "white"}
        },
        {
            "data": {
                "url": "https://github.com/hongjchang/Week9Homework/raw/main/datasets/weatherAUS_lesserDataForHomework.csv"
            },
            "mark": {"type": "circle", "tooltip": {"content": "data"}},
            "encoding": {
                "longitude": {"field": "longitude", "type": "quantitative"},
                "latitude": {"field": "latitude", "type": "quantitative"},
                "size": {
                  "field": "Rainfall",
                  "type": "quantitative",
                  "title": "Rainfall (mm)",
                  "scale": {"domain": [4, 8]}
                },
                "color": {
                  "field": "Location",
                  "type": "nominal",
                  "title": "Location (State)",
                  "scale": {"scheme": "reds"}
                },
                "tooltip": [
                    {"field": "Date", "type": "nominal", "title": "Date"},
                    {"field": "Location", "type": "ordinal"},
                    {"field": "Rainfall", "type": "quantitative"}
                  ]
            }
        }
    ]
}
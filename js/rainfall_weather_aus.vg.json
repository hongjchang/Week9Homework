{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "title": "Total Rainfall in Australia Between December 2008 and April 2009",
    "projection": {
        "type":"equirectangular"
    },
    "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
                "url": "datasets/weatherAUS_copy.csv"
            },
            "key": "Location",
            "fields": ["Rainfall"]
          }
        },
        {"calculate": "datum.Rainfall + 0.1", "as": "Daily Rainfall"}
    ],
    "layer": [
        {
            "data": {
                "url": "js/ne_50m_ocean.topojson",
                "format": {"type": "topojson", "feature": "ne_50m_ocean"}
            },
            "mark": {"type": "geoshape", "stroke": "white"}
        },
        {
            "data": {
                "url": "js/ne_50m_coastline.topojson",
                "format": {"type": "topojson", "feature": "ne_50m_coastline"}
            },
            "mark": {"type": "geoshape", "stroke": "white"}
        },
        {
            "data": {
                "url": "js/ne_50m_land.topojson",
                "format": {"type": "topojson", "feature": "ne_50m_land"}
            },
            "mark": {"type": "geoshape", "stroke": "white"}
        },
        {
            "data": {
                "url": "js/ne_50m_admin_1_states_provinces.topojson",
                "format": {"type": "topojson", "feature": "ne_50m_admin_1_states_provinces"}
            },
            "mark": {"type": "geoshape", "stroke": "lightgrey", "fill": "white"}
        },
        {
            "data": {
                "url": "js/ne_50m_graticules_30.topojson",
                "format": {"type": "topojson", "feature": "ne_50m_graticules_30"}
            },
            "mark": {"type": "geoshape", "stroke": "white", "strokeOpacity": 0.5}
        },
        {
            "mark": {"type": "circle", "tooltip": {"content": "data"}},
            "encoding": {
                "size": {
                    "field": "Rainfall",
                    "type": "quantitative",
                    "title": "Rainfall (mm)",
                    "scale": {
                    "domain": [0, 10]
                    }
                },
                "color": {
                    "field": "Location",
                    "type": "nominal",
                    "title": "Location (State)",
                    "scale": {
                    "scheme": "reds",
                    "domain": [
                            "Australian Capital Territory", "New South Wales", "Northern Territory", "Queensland", "Southern Australia", "Tasmania", "Victoria", "Western Australia"
                    ],
                    "range": [
                        "#b2182b","#d6604d","#f4a582","#fddbc7","#d1e5f0","#92c5de","#4393c3","#2166ac"
                    ]
                    }
                },
                "tooltip": [
                    {"field": "Month", "type": "quantitative", "title": "Month"},
                    {"field": "Year", "type": "quantitative", "title": "Year"},
                    {"field": "Location", "type": "ordinal"},
                    {"field": "Rainfall", "type": "quantitative"}
                ]
            }
        }
    ]
}
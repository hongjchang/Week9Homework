{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "title": "Total Rainfall in Australia Between December 2008 and April 2009",
    "projection": {
        "type":"equirectangular"
    },
    "layer": [
        {
            "data": {
                "url": "",
                "format": {"type": "topojson", "feature": "ne_50m_coastline"}
            },
            "mark": {"type": "geoshape", "stroke": "white"}
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/hongjchang/Week9Homework/main/js/ne_50m.topojson",
                "format": {"type": "topojson", "feature": "ne_50m_ocean"}
            },
            "mark": {"type": "geoshape", "stroke": "white"}
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/hongjchang/Week9Homework/main/js/ne_50m.topojson",
                "format": {"type": "topojson", "feature": "ne_50m_land"}
            },
            "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "lightgrey"}
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/hongjchang/Week9Homework/main/js/ne_50m.topojson",
                "format": {"type": "topojson", "feature": "ne_50m_graticules_30"}
            },
            "mark": {"type": "geoshape", "stroke": "white", "strokeOpacity": 0.5}
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/hongjchang/Week9Homework/main/datasets/weatherAUS_lesserDataForHomework.csv"
            },
            "mark": {"type": "circle", "tooltip": {"content": "data"}},
            "encoding": {
                "longitude": {"field": "longitude", "type": "quantitative"},
                "latitude": {"field": "latitude", "type": "quantitative"},
                "size": {
                  "field": "Rainfall",
                  "type": "quantitative",
                  "title": "Rainfall (mm)",
                  "scale": {
                    "domain": [0, 10]
                  }
                },
                "color": {
                  "field": "Location",
                  "type": "nominal",
                  "title": "Location (State)",
                  "scale": {
                    "scheme": "reds",
                    "domain": [
                           "Australian Capital Territory", "New South Wales", "Northern Territory", "Queensland", "Southern Australia", "Tasmania", "Victoria", "Western Australia"
                    ],
                    "range": [
                        "#b2182b","#d6604d","#f4a582","#fddbc7","#d1e5f0","#92c5de","#4393c3","#2166ac"
                    ]
                  }
                },
                "tooltip": [
                    {"field": "Date", "type": "nominal", "title": "Date"},
                    {"field": "Location", "type": "ordinal"},
                    {"field": "Rainfall", "type": "quantitative"}
                  ]
            }
        }
    ]
}